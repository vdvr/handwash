pollSec is een globale variabele die opgeteld wordt in timer interrupt

void poll_RPI(void)
{
    if(!rpi_avail)
    {
        if(pollSec >= 120)
        {
            resetTimer();                       // wait_rec_msg gebruikt timestamps
            poll_reset();                       // voor volgende poll, voor als de poll faalde
            send_msg(POLL_REQUEST,"");
            if (wait_rec_msg(500)) rpi_avail = 1;
        }
    }
}

void poll_reset(void)           // deze functie oproepen bij elke actie bij atmega
{
    pollSec = 0;
}